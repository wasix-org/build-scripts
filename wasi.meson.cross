[host_machine] 
system = 'wasi'
cpu_family = 'wasm32'
cpu = 'wasm32'
endian = 'little'

[binaries]
c = '@DIRNAME@/clang.sh'
cpp = '@DIRNAME@/clang++.sh'
ar = 'llvm-ar-19'
ld = 'wasm-ld-19'
cython = '/usr/bin/cython'
exe_wrapper = 'wasmer'

[properties]
needs_exe_wrapper = true
skip_sanity_check = true
longdouble_format = 'IEEE_QUAD_LE' # for numpy